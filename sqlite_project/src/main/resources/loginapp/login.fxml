<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="350.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.loginapp.LoginController">
    <children>
        <!-- Label for DB Status -->
        <Label layoutX="20.0" layoutY="20.0" text="DB Status:" />

        <!-- Dynamic DB Status Label -->
        <Label fx:id="dbstatus" layoutX="100.0" layoutY="20.0" />

        <!-- Label and TextField for Username -->
        <Label layoutX="20.0" layoutY="70.0" text="Username:" />
        <TextField fx:id="username" layoutX="100.0" layoutY="70.0" prefHeight="25.0" prefWidth="200.0" promptText="username" />

        <!-- Label and PasswordField for Password -->
        <Label layoutX="20.0" layoutY="120.0" text="Password:" />
        <PasswordField fx:id="password" layoutX="100.0" layoutY="120.0" prefHeight="25.0" prefWidth="200.0" promptText="password" />

        <!-- ComboBox above the Login button -->
        <ComboBox fx:id="combobox" layoutX="100.0" layoutY="170.0" prefHeight="25.0" prefWidth="200.0" promptText="Admin / Student" />

        <!-- Login Button -->
        <Button fx:id="login" layoutX="140.0" layoutY="210.0" prefHeight="30.0" prefWidth="70.0" text="Login" onAction="#login"/>
      <Label fx:id="loginStatus" AnchorPane.bottomAnchor="332.6666666666667" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="322.0" AnchorPane.topAnchor="150.0" />
    </children>
</AnchorPane>
